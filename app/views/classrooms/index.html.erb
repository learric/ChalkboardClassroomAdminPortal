<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">
    <p id="notice"><%= notice %></p>

    <h1>Classrooms</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Subject</th>
          <th colspan="2">Classroom Options</th>
          <% if @user.role == 2 %>
            <th colspan="2">Admin</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @classrooms.each do |classroom| %>
          <tr>
            <td><%= classroom.name %></td>
            <td><%= classroom.subject %></td>
            <td><%= link_to 'Students', classroom, class: 'btn btn-primary' %></td>
            <td><%= link_to 'Questions', questions_path, class: 'btn btn-success' %></td>

            <% if @user.role == 2 %>
              <td><%= link_to 'Edit', edit_classroom_path(classroom), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Delete', classroom, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if @user.role == 2 %>
      <%= link_to 'New Classroom', new_classroom_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
