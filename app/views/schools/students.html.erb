<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">
    <p id="notice"><%= notice %></p>

    <h1>Students</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="2">Admin Options</th>
          </tr>
        </thead>

        <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name %> <%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><%= link_to 'Edit', school_edit_user_path(student.id), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Delete', school_delete_user_path(student.id), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    <p>&nbsp;</p>

    <div class="actions">
      <%= link_to 'New Student', school_new_user_path, class: 'btn btn-primary' %>
    </div>

    <%= link_to 'Cancel', schools_path, class: 'chalk_link' %>

  </div>
</div>
