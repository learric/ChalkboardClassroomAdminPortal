<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">
    <p id="notice"><%= notice %></p>

    <h1>Students</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.first_name %> <%= student.last_name %></td>
            <td><%= student.email %></td>
            <td><%= link_to 'Edit', school_edit_user_path(student.id), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Delete', school_delete_user_path(student.id), class: 'btn btn-danger', method: :delete %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    <p>&nbsp;</p>

    <p><%= link_to 'New Student', school_new_user_path, class: 'btn btn-primary' %></p>

    <p><%= link_to 'Back to School', schools_path, class: 'btn btn-danger' %></p>

  </div>
</div>
