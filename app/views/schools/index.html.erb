<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">
    <p id="notice"><%= notice %></p>

    <h1><%= @schools.name %></h1>

      <table class="table">
        <thead>
          <tr>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Mascot</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @schools.address %></td>
            <td><%= @schools.city %></td>
            <td><%= @schools.state %></td>
            <td><%= @schools.zip %></td>
            <td><%= @schools.mascot %></td>
          </tr>
        </tbody>
      </table>

    <p>&nbsp;</p>

    <div class="row">
      <div class="col-sm-3">
        <%= link_to 'Edit School', edit_school_path(@schools), class: 'btn btn-primary' %>
      </div>

      <div class="col-sm-2">
        <%= link_to 'Teachers', schools_teachers_path, class: 'btn btn-warning' %>
      </div>

      <div class="col-sm-2">
        <%= link_to 'Students', schools_students_path, class: 'btn btn-success' %>
      </div>
    </div>

  </div>
</div>
