<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">
    <p id="notice"><%= notice %></p>

    <h1>School Profile</h1>

    <% @schools.each do |school| %>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Mascot</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= school.name %></td>
            <td><%= school.address %></td>
            <td><%= school.city %></td>
            <td><%= school.state %></td>
            <td><%= school.zip %></td>
            <td><%= school.mascot %></td>
          </tr>
        </tbody>
      </table>

      <%= link_to 'Edit', edit_school_path(school), class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
