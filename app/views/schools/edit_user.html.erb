<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">

    <p id="notice"><%= notice %></p>

    <h1>Edit User</h1>

    <%= form_for(@user, url: school_update_user_path(@user)) do |f| %>

      <div class="row">
        <div class="col-sm-6">
          <fieldset class="form-group">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class: 'form-control' %>
          </fieldset>
        </div>

        <div class="col-sm-6">
          <fieldset class="form-group">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class: 'form-control' %>
          </fieldset>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <fieldset class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'form-control' %>
          </fieldset>
        </div>

        <div class="col-sm-6">
          <fieldset class="form-group">
            <%= f.label 'Permissions' %>
            <select name="user[role]" id="user_role" class="form-control">
              <option value="0">Student</option>
              <option value="1" <% if @user.role == 1 %> selected <% end %> >Teacher</option>
            </select>
          </fieldset>
        </div>
      </div>

        <div class="actions">
          <%= f.submit 'Edit User', class: 'btn btn-primary' %>
        </div>
    <% end %>

    <p>&nbsp;</p>

    <%= link_to 'Back to School', schools_path, class: 'btn btn-danger' %>

  </div>
</div>