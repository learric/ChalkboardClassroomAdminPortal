<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col col-md-6">
      <h2>Question</h2>
      <p>&nbsp;</p>
      <fieldset class="form-group">
        <%= f.label :first_line %><br>
        <%= f.text_area :first_line, class: "form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <%= f.label :last_line %> (Optional)<br>
        <%= f.text_area :last_line, class: "form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <%= f.label :category %><br>
        <%= f.text_field :category, class: "form-control" %>
      </fieldset>
    </div>
    <div class="col col-md-6">
      <h2>Answers</h2>
      <p>&nbsp;</p>
      <fieldset class="form-group">
        <label for="incorrect_one">Incorrect Answer</label><br>
        <%= f.text_field :incorrect_one, class: "form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="incorrect_two">Incorrect Answer</label><br>
        <%= f.text_field :incorrect_two, class: "form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="incorrect_three">Incorrect Answer</label><br>
        <%= f.text_field :incorrect_three, class: "form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="correct_answer">Correct Answer</label><br>
        <%= f.text_field :correct_answer, class: "form-control" %>
      </fieldset>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
