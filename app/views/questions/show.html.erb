<%= render 'layouts/header_main' %>

<div class="container-fluid">
  <h1 class="display-4"><%= @question.category %> Question</h1>
  <p>&nbsp;</p>

  <div class="row">
    <div class="col col-md-6">
      <h2>Question</h2>

      <p><%= @question.first_line %></p>
      <p><%= @question.last_line %>&nbsp;</p>
    </div>
    <div class="col col-md-6">
      <h2>Answers</h2>
      <p><strong>Incorrect</strong><br>
        <%= @question.incorrect_one %><br>
        <%= @question.incorrect_two %><br>
        <%= @question.incorrect_three %></p>

      <p><strong>Correct</strong><br>
        <%= @question.correct_answer %></p>
    </div>
  </div>

  <p><%= link_to 'Edit', edit_question_path(@question), class: "btn btn-lg btn-primary" %></p>
  <p><%= link_to 'Back', questions_path, class: "btn btn-danger" %></p>

  <p id="notice"><%= notice %></p>
</div>