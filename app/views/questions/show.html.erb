<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">

    <h1>Edit Question</h1>

    <p id="notice"><%= notice %></p>

    <table class="table">
      <thead>
      <tr>
        <th>Category</th>
        <th>Question</th>
        <th>Incorrect Answers</th>
        <th>Correct Answer</th>
      </tr>
      </thead>

      <tbody>
      <tr>
        <td><%= @question.category %></td>
        <td><%= @question.first_line %></td>
        <td><%= @question.incorrect_one %><br />
          <%= @question.incorrect_two %><br />
          <%= @question.incorrect_three %>
        </td>
        <td><%= @question.correct_answer %></td>
      </tr>
      </tbody>
    </table>

    <p>&nbsp;</p>

    <div class="actions">
      <%= link_to 'Edit Question', edit_question_path(@question), class: 'btn btn-primary' %>
    </div>

    <%= link_to 'Questions', classroom_questions_path(@question.classroom_id), class: 'chalk_link' %>

  </div>
</div>
