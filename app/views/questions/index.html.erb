<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">

    <p id="notice"><%= notice %></p>

    <h1>Questions</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Category</th>
          <th>Question</th>
          <th>Incorrect</th>
          <th>Correct</th>
          <th colspan="2">Admin Options</th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.category %></td>
            <td><%= question.first_line %></td>
            <td><%= question.incorrect_one %><br />
              <%= question.incorrect_two %><br />
              <%= question.incorrect_three %>
            </td>
            <td><%= question.correct_answer %></td>
            <td><%= link_to 'Edit', edit_question_path(question), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p>&nbsp;</p>

    <div class="actions">
      <%= link_to 'New Question', new_classroom_question_path(@classroom), class: 'btn btn-primary' %>
    </div>

    <%= link_to 'Classrooms', classrooms_path, class: 'chalk_link' %>

  </div>
</div>
