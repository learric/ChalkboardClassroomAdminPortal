<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">

    <p id="notice"><%= notice %></p>

    <h1>Questions</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Category</th>
          <th>Question</th>
          <th>Answers</th>
          <th>Options</th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.category %></td>
            <td><%= question.first_line %></td>
            <td><%= question.incorrect_one %><br />
              <%= question.incorrect_two %><br />
              <%= question.incorrect_three %>
              <p>&nbsp;</p>
              <strong>Correct</strong><br />
              <%= question.correct_answer %>
            </td>
            <td><%= link_to 'Edit', edit_question_path(question), class: 'btn btn-primary' %>
              <p>&nbsp;</p>
              <%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Question', new_question_path, class: 'btn btn-primary' %>

  </div>
</div>
