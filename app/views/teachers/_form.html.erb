<%= form_for(@teacher) do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

      <ul>
      <% @teacher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col col-sm-12">
      <h2>Teacher Information</h2>
    </div>
    <div class="col col-sm-2">
      <fieldset class="form-group">
        <label for="name_prefix">Prefix</label><br>
        <%= f.text_field :name_prefix, class:"form-control" %>
      </fieldset>
    </div>
    <div class="col col-sm-5">
      <fieldset class="form-group">
        <label for="name_first">First</label><br>
        <%= f.text_field :name_first, class:"form-control" %>
      </fieldset>
    </div>
    <div class="col col-sm-5">
      <fieldset class="form-group">
        <label for="name_last">Last</label><br>
        <%= f.text_field :name_last, class:"form-control" %>
      </fieldset>
    </div>
  </div>

  <div class="row">
    <div class="col col-sm-6">
      <h2>School Information</h2>
      <fieldset class="form-group">
        <label for="school_name">Name</label><br>
        <%= f.text_field :school_name, class:"form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="school_location">Street Address</label><br>
        <%= f.text_field :school_location, class:"form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="school_city">City</label><br>
        <%= f.text_field :school_city, class:"form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="school_state">State</label><br>
        <%= f.text_field :school_state, class:"form-control" %>
      </fieldset>
    </div>
    <div class="col col-sm-6">
      <h2>Classroom Information</h2>
      <fieldset class="form-group">
        <label for="classroom_name">Name</label><br>
        <%= f.text_field :classroom_name, class:"form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="classroom_location">Room Location</label><br>
        <%= f.text_field :classroom_location, class:"form-control" %>
      </fieldset>
      <fieldset class="form-group">
        <label for="classroom_description">Description</label><br>
        <%= f.text_area :classroom_description, class:"form-control" %>
      </fieldset>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
