<%= render 'layouts/header_main' %>

<div class="content_overlay content_column">
  <div class="container-fluid content_overlay">

    <h1><%= @user.first_name %> <%= @user.last_name %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

        <div class="row">
          <h3>Edit Info</h3>

          <div class="col-sm-6">
            <fieldset class="form-group">
              <%= f.label :first_name %><br />
              <%= f.text_field :first_name, class: 'form-control' %>
            </fieldset>

            <fieldset class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </fieldset>
          </div>


          <div class="col-sm-6">
            <fieldset class="form-group">
              <%= f.label :last_name %><br />
              <%= f.text_field :last_name, class: 'form-control' %>
            </fieldset>

            <fieldset class="form-group">
              <%= f.label :favorite_team %><br />
              <%= f.text_field :favorite_team, class: 'form-control' %>
            </fieldset>
          </div>
        </div>

        <p>&nbsp;</p>

        <div class="row">
          <h3>Edit Password</h3>

          <div class="col-sm-6">
            <fieldset class="form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </fieldset>
          </div>

          <div class="col-sm-6">
            <fieldset class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </fieldset>
          </div>
        </div>

        <p>&nbsp;</p>

        <div class="row">
          <div class="col-sm-6">
            <fieldset class="form-group">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
            </fieldset>
          </div>
        </div>

      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= link_to "Back", profiles_path, class: 'btn btn-danger' %>

  </div>
</div>
